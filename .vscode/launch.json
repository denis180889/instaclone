{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "smartStep": true,
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "args": [
                "${workspaceFolder}/app/index.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
        }
    ]
}